<!-- HERO -->
<section class="hero">
  <div class="row intro">

    <!-- SEARCH -->
    <form class="search-bar" action="search" method="get">
        <div class="large-12 columns">
          <div class="row collapse">
            <div class="small-5 columns">
              <input name="search_input" class="search-input" type="text" placeholder="search">
            </div>
           <!--   <div class="small-5 columns">
          <input name="search_location_input" class="search-input" type="text" placeholder="search location">
        </div> -->
            <div class="small-2 columns">
              <button class="button postfix">Search</button>
            </div>
          </div>
      </div>
    </form>

  </div>
</section>

<!-- TILES -->
<div id="masonry-grid">
  <div class="grid-sizer"></div>
 <!--  <div class="gutter-sizer"></div> -->
  <% @items.each do |item| %>
    <div class="grid-item">
      <div class="tile">
        <div class="item-img">
            <% if ItemImage.find_by(item_id: item.id) %>
              <a href="#"><img src="<%= ItemImage.find_by(item_id: item.id).image_path %>"></a>
            <% else %>
              <p>no image</p>
            <% end %>
        </div>
        <a href="#"><h3><%= item.title %></h3></a>
        <h5>$<%= item.price %></h5>
        <p><%= item.location %></p>
        <p>Lorem ipsum dolor sit amet, consectetur adipiscing elit. Proin posuere sem enim, accumsan convallis risus semper.</p>
        <a class="button expand view-listing">View Listing</a>
      </div>
    </div>
  <% end %>
  </div>
</div>





